.masthead
  - if employee_signed_in?
    #user_session
      %ul.nav.nav-pills.pull-right
        %li.dropdown
          = link_to ("Todo" + content_tag(:b, '', class: 'caret')).html_safe, "#", class: 'dropdown-toggle', "data-toggle" => "dropdown"
          %ul{ class: 'dropdown-menu' }
            = render 'shared/operations'

        %li.dropdown
          = link_to ("#{current_employee.nickname}" + content_tag(:b, '', class: 'caret')).html_safe, "#", class: 'dropdown-toggle', "data-toggle" => "dropdown"
          %ul{ class: 'dropdown-menu' }
            = render 'shared/session'
  - else
    %li= link_to 'Sign in', new_employee_session_path
    %li= link_to 'Sign up', new_employee_registration_path
    %li= link_to 'Log out', destroy_employee_session_path, method: :delete

  #message
    = render 'shared/message'

  %div
    %h3.nav.muted
      = link_to "HR Tracker", root_path
  %hr
