= form_for @employee do |f|
  - if @employee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@employee.errors.count, "error")} prohibited this employee from being saved:"
      %ul
        - @employee.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :birthdate
    = f.date_select :birthdate
  .field
    = f.label :originate_start_date
    = f.date_select :originate_start_date
  .field
    = f.label :originate_end_date
    = f.date_select :originate_end_date
  .field
    = f.label :current_employee
    = f.check_box :current_employee
  .field
    = f.label :years_prior_exp
    = f.number_field :years_prior_exp
  .field
    = f.label :university
    = f.text_field :university
  .field
    = f.label :degree
    = f.text_field :degree
  .field
    = f.label :is_system_admin
    = f.check_box :is_system_admin
  .field
    = f.label :is_admin
    = f.check_box :is_admin
  .actions
    = f.submit 'Save'
