%h1 Listing salary_activities

%table
  %tr
    %th Previous salary
    %th Current salary
    %th Contract
    %th Discusstion date
    %th Effective date
    %th
    %th
    %th

  - @salary_activities.each do |salary_activity|
    %tr
      %td= salary_activity.previous_salary
      %td= salary_activity.current_salary
      %td= salary_activity.contract
      %td= salary_activity.discusstion_date
      %td= salary_activity.effective_date
      %td= link_to 'Show', contract_salary_activity_path(@contract, salary_activity)
      %td= link_to 'Edit', edit_contract_salary_activity_path(@contract, salary_activity)
      %td= link_to 'Destroy', contract_salary_activity_path(@contract, salary_activity), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Salary activity', new_contract_salary_activity_path(@contract)
