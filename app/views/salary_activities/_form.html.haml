= form_for [@contract, @salary_activity] do |f|
  - if @salary_activity.errors.any?
    #error_explanation
      %h2= "#{pluralize(@salary_activity.errors.count, "error")} prohibited this salary_activity from being saved:"
      %ul
        - @salary_activity.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :previous_salary
    = f.text_field :previous_salary, value: @salary_activity.previous_salary, readonly: true
  .field
    = f.label :current_salary
    = f.text_field :current_salary
  .field
    = f.label :contract
    = f.text_field :contract
  .field
    = f.label :discusstion_date
    = f.date_select :discusstion_date
  .field
    = f.label :effective_date
    = f.date_select :effective_date
  .field
    = link_to "Discussion note", contract_salary_activity_discussions_path(@contract, @salary_activity)
  .actions
    = f.submit 'Save'
