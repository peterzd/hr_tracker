= form_for [@contract, @salary_activity], { html: { class: 'form-horizontal' } } do |f|
  - if @salary_activity.errors.any?
    #error_explanation
      %h2= "#{pluralize(@salary_activity.errors.count, "error")} prohibited this salary_activity from being saved:"
      %ul
        - @salary_activity.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :previous_salary, class: 'control-label'
    .controls
      = f.text_field :previous_salary, value: @salary_activity.previous_salary, readonly: true
  .control-group
    = f.label :current_salary, class: 'control-label'
    .controls
      = f.text_field :current_salary
  .control-group
    = f.label :contract, class: 'control-label'
    .controls
      = f.text_field :contract
  .control-group
    = f.label :discussion_date, class: 'control-label'
    .controls
      #datepicker_discussion_date.input-append
        = f.text_field :discussion_date, { "data-format" => "yyyy-MM-dd" }
        %span.add-on
          %i{ "data-time-icon" => 'icon-time', "data-date-icon" => 'icon-calendar' }
    -# = f.date_select :discusstion_date
  .control-group
    = f.label :effective_date, class: 'control-label'
    .controls
      #datepicker_discussion_date.input-append
        = f.text_field :effective_date, { "data-format" => "yyyy-MM-dd" }
        %span.add-on
          %i{ "data-time-icon" => 'icon-time', "data-date-icon" => 'icon-calendar' }
      -# = f.date_select :effective_date
  .control-group
    -# = f.label :discussion_note, class: 'control-label'
    = render 'discussion_form'
  .control-group
    .controls
      = f.submit 'Save', class: 'btn'
