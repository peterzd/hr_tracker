%h1 Listing contracts

%table
  %tr
    %th Start date
    %th End date
    %th Salary
    %th Employee
    %th
    %th
    %th

  - @contracts.each do |contract|
    %tr
      %td= contract.start_date
      %td= contract.end_date
      %td= contract.salary
      %td= contract.employee
      %td
        .dropdown
          %ul{class: 'dropdown-menu', role: 'menu'}
            %li= link_to "Show", contract
            %li= (link_to 'Edit', edit_contract_path(contract)) if can? :edit, contract
            %li= (link_to 'Destroy', contract, :method => :delete, :data => { :confirm => 'Are you sure?' }) if can? :delete, contract
      %td= link_to 'Show', contract
      %td= (link_to 'Edit', edit_contract_path(contract)) if can? :edit, contract
      %td= (link_to 'Destroy', contract, :method => :delete, :data => { :confirm => 'Are you sure?' }) if can? :delete, contract
      %td= link_to 'Salary Activities', contract_salary_activities_path(contract)

%br

= (link_to 'New Contract', new_contract_path) if can? :new, Contract
