%table.table.table-striped.table-hover.table-bordered
  %tr
    %th Start date
    %th End date
    %th Salary
    %th Employee
    %th
    %th

  - @contracts.each do |contract|
    %tr
      %td= contract.start_date
      %td= contract.end_date
      %td= contract.salary
      %td= contract.employee
      %td
        .dropdown
          = link_to "Operations", "#", { class: 'dropdown-toggle', "data-toggle" => "dropdown"}
          %ul{ class: 'dropdown-menu', role: 'menu', "aria-labelledby" => "dropdownMenu"}
            %li= link_to "Show", contract, { tabindex: "-1" }
            %li= (link_to 'Edit', edit_contract_path(contract), { tabindex: "-1" }) if can? :edit, contract
            %li= (link_to 'Destroy', contract, { tabindex: "-1", :method => :delete, data: { confirm: 'Are you sure?'}, remote: true } ) if can? :delete, contract
      %td= link_to 'Salary Activities', contract_salary_activities_path(contract)
