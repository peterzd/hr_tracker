= form_for @contract, { html: { class: 'form-horizontal' } } do |f|
  - if @contract.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contract.errors.count, "error")} prohibited this contract from being saved:"
      %ul
        - @contract.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :start_date, class: 'control-label'
    .controls
      #datepicker_start_date.input-append
        = f.text_field :start_date, { "data-format" => "yyyy-MM-dd" }
        %span.add-on
          %i{ "data-time-icon" => 'icon-time', "data-date-icon" => 'icon-calendar' }
  .control-group
    = f.label :end_date, class: 'control-label'
    .controls
      #datepicker_end_date.input-append
        = f.text_field :end_date, { "data-format" => "yyyy-MM-dd" }
        %span.add-on
          %i{ "data-time-icon" => 'icon-time', "data-date-icon" => 'icon-calendar' }
  .control-group
    = f.label :salary, class: 'control-label'
    .controls
      = f.text_field :salary
  .control-group
    = f.label :employee, class: 'control-label'
    .controls
      = collection_select :contract, :employee_id, Employee.all, :id, :email
  .control-group
    .controls
      = f.submit 'Save', class: 'btn'
      = link_to 'Cancel', contracts_path, class: 'btn'
