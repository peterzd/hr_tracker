- emp_days.each_pair do |employee, days|
  .employee-days
    .nickname-hidden= employee.nickname
    .employee.inline
      .btn-group
        = link_to employee.nickname, emp_contracts_path(employee.nickname), class: "btn #{btn_type}"
        %button{ class: "btn dropdown-toggle #{btn_type}", "data-toggle" => "dropdown"}
          %span.caret
        %ul.dropdown-menu
          = render 'emp_actions', employee: employee
    .days.inline
      = "#{ days.to_i } days"

