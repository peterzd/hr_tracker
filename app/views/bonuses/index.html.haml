%h1 Bonuses#index
%h2
  The bonuses of #{@employee.nickname}
%table.table.table-hover.table-bordered.table-striped
  %tr
    %th Bonus Amount
    %th Distribution Date
    %th Comment
    - if can? :manage, Bonus
      %th

  - @bonuses.each do |bonus|
    %tr
      %td= bonus.amount
      %td= bonus.distribution_date
      %td= bonus.comment
      - if can? :manage, Bonus
        %td
          .dropdown
            = link_to "Operations", "#", { class: 'dropdown-toggle', "data-toggle" => "dropdown" }
            %ul{ class: 'dropdown-menu', role: 'menu', "aria-labelledby" => "dropdownMenu" }
              -# %li= link_to "Show", bonus_path(@employee.nickname, bonus), { tabindex: '-1' }
              %li= link_to "Edit", edit_bonus_path(@employee.nickname, bonus), { tabindex: '-1' }
              %li= link_to ("Destroy" + content_tag(:i, '', class: 'icon-trash')).html_safe, bonus_path(@employee.nickname, bonus), { tabindex: "-1", :method => :delete, :data => { :confirm => 'Are you sure?' }}

= link_to "New Bonus for #{@employee.nickname}", new_bonus_path(@employee.nickname)

